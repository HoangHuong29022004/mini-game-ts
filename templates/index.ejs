<!DOCTYPE html>
<html lang="vi">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <main class="container">
        <div class="game-container">
            <%- include('partials/header') %>
            
            <div id="app">
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Điểm Số</h5>
                                <p class="display-6" id="score">0</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Thời Gian</h5>
                                <p class="display-6" id="timer">120</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Người Chơi</h5>
                                <p class="display-6" id="playerName">-</p>
                            </div>
                        </div>
                    </div>
                </div>

                <section class="row" id="board">
                    <!-- Game board will be dynamically populated -->
                </section>

                <section class="row mt-4">
                    <div class="col text-center">
                        <button class="btn btn-primary btn-lg btn-game" id="resetBtn">
                            Chơi Lại
                        </button>
                        <button class="btn btn-danger btn-lg btn-game" id="cancelBtn">
                            Thoát Game
                        </button>
                    </div>
                </section>
            </div>

            <%- include('partials/footer') %>
        </div>
    </main>
    <%- include('partials/foot') %>
</body>
</html>